<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/auftrag_view_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/auftrag_detail_backgound"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/auftrag_view_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="21dp"
        android:text="@string/auftragstitel" />

    <TextView
        android:id="@+id/auftrag_view_arbeit_ort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/auftrag_view_id"
        android:layout_below="@+id/auftrag_view_id"
        android:layout_marginTop="33dp"
        android:text="@string/arbeitsort" />

    <TextView
        android:id="@+id/auftrag_view_datum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/auftrag_view_arbeit_ort"
        android:layout_alignBottom="@+id/auftrag_view_arbeit_ort"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="39dp"
        android:text="@string/datum" />

</RelativeLayout>