<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bewertung_detail_background">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="29dp"
        android:text="@string/bewertung_von" />

    <TextView
        android:id="@+id/bewertung_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView6"
        android:layout_marginStart="70dp"
        android:layout_toEndOf="@+id/textView6"
        android:text="@string/name"
        android:textStyle="bold" />

    <RatingBar
        android:id="@+id/bewertung_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_marginTop="27dp"
        android:isIndicator="true" />

    <TextView
        android:id="@+id/bewertung_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bewertung_rate"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="28dp"
        android:text="@string/bewertung_text"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>